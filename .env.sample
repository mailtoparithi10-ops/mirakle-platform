cp .env.sample .env
# edit .env to set SECRET_KEY if desired
export FLASK_APP=app.py
export FLASK_ENV=development
# on Windows use set instead of export
FLASK_ENV=development
SECRET_KEY=replace_with_a_secure_random_string
DATABASE_URL=sqlite:///mirakle.db

# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Razorpay Configuration (Payment Gateway)
# Get these from Razorpay Dashboard: https://dashboard.razorpay.com/
# For testing, use test keys (rzp_test_...)
# For production, use live keys (rzp_live_...)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_WEBHOOK_SECRET=xxxxxxxxxxxxxxxxxxxxx
RAZORPAY_ACCOUNT_NUMBER=xxxxxxxxxxxxxxxxxxxxx

# Sentry Configuration (Error Tracking & Monitoring)
# Get your DSN from https://sentry.io/
# Leave empty to disable Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1
SENTRY_RELEASE=

# Email Configuration (Flask-Mail)
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_DEFAULT_SENDER=your_email@gmail.com
MAIL_MAX_EMAILS=100
MAIL_SUPPRESS_SEND=False
